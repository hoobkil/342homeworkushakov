<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="ThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="ThemeBlack" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlack</item>
        <item name="android:textColor">@color/colorTextGrey</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
    </style>

    <style name="Margin1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Margin3" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Margin10" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
